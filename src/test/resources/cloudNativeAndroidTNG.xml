<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Native mobile testing Suite">
  <parameter name="appType" value="native"/>
  <parameter name="deviceName" value="Google Pixel 2"/>
  <parameter name="platformName" value="Android"/>
  <parameter name="appPackage" value="platkovsky.alexey.epamtestapp"/>
  <parameter name="appActivity" value="activities.LoginActivity"/>

  <test name="Native tests">
    <groups>
      <run>
        <include name="native"/>
      </run>
    </groups>
    <packages>
      <package name="scenarios"/>
    </packages>
  </test>
</suite>
